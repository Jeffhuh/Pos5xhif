@model SPG_Fachtheorie.Aufgabe3Mvc.Controllers.HomeController.IndexViewModel
<div>
    <h1 class="h3">Klausurprüfung aus Fachtheorie</h1>
    <p>Bitte füllen Sie diese Daten in der Datei <em>SPG_Fachtheorie.Aufgabe3Mvc/Views/Home/Index.cshtml</em> am Beginn Ihrer Arbeit aus.</p>
    <table class="table table-sm border border-primary">
        <tr>
            <th style="width:10em">Maturaaccount</th>
            <td style="width:30em">(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Vorname</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Zuname</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
        <tr>
            <th>Klasse</th>
            <td>(Bitte ausfüllen)</td>
        </tr>
    </table>
</div>
<div>
    <h1 class="h5 mt-5">Login als Store</h1>
    @if (Model.StoreId != 0)
    {
        <p>Angemeldet als Store mit der ID @Model.StoreId</p>
    }
    <p>Wählen Sie einen Store aus und drücken Sie auf Login, um sich anzumelden.</p>
    <form method="post" asp-controller="Home" asp-action="Login">
        <select class="form-control" asp-for="StoreId" asp-items="Model.StoreList"></select>
        <button type="submit" class="btn btn-primary">Login</button>
        <button type="submit" class="btn btn-primary" asp-action="Logout">Logout</button>
    </form>

</div>

<div>
    <h1 class="h5 mt-5">Daten der Tabelle Store</h1>
    <p>Diese Tabelle dient zum Testen des Datenbankzugriffes.</p>
</div>
<table class="table table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Stores)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
            </tr>
        }
    </tbody>
</table>

